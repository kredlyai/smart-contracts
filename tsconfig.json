{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./@types/*",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./typechain",
    "./deploy",
    "./helpers",
    "./@types"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}